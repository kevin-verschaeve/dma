                  {
                      if ($site['LOC_SITE'] !== null || $site['LOC_SITE'] != "") {
                        $data .= ", ".ucfirst(strtolower($site['LOC_SITE']));
                      }
                  }
                  $data .= " (".$qte." Tonnes)'";
                  $data .= $i == $max ? "]," : ",";
                  $i++;
                }
